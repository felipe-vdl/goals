// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Goal {
  id           String    @id @default(cuid())
  title        String    @db.Text
  content      String    @db.Text

  completed_at DateTime?
  deleted_at DateTime?
  deadline     DateTime?

  @@map("goals")
}